{
  "name": "mikeill/mz-mindbody-api",
  "description": "Interface with Mindbody Online API",
  "keywords": [
    "MBO",
    "mindbody",
    "jquery",
    "wordpress",
    "plugin"
  ],
  "homepage": "https://github.com/MikeiLL/mz-mindbody-api",
  "license": "GPL2",
  "authors": [
    {
      "name": "Mike iLL Kilmer",
      "email": "mike@mzoo.org",
      "homepage": "http://mzoo.org",
      "role": "Developer"
    }
   ],
   "type": "wordpress-plugin",
   "require": {
    "php": ">=7.1",
    "composer/installers": "~1.0",
    "ericmann/sessionz": "dev-master",
    "ericmann/wp-session-manager": "*",
    "gamajo/template-loader": "dev-master"
  },
  "repositories": [
    {
      "url": "https://github.com/brianhenryie/strauss",
      "type": "git"
    }
  ],
   "autoload": {
     "psr-4": {
       "MZoo\\MzMindbody\\": "src"
     },
		"files": ["src/Classes/gamajo/template-loader/class-gamajo-template-loader.php"]
   },
   "config": {
     "optimize-autoloader": true,
     "preferred-install": "dist",
     "sort-packages": true,
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
   },
   "scripts": {
     "lint": [
       "phpcs --extensions=php src *.php"
     ],
     "fix": ["phpcbf --extensions=php src *.php"],
    "strauss": [
      "vendor/bin/strauss"
    ],
    "post-install-cmd": [
        "@strauss"
    ],
    "post-update-cmd": [
        "@strauss"
    ]
   },
   "extra": {
        "strauss": {
            "target_directory": "/src/Dependencies/",
            "namespace_prefix": "MZoo\\MzMindbody\\Dependencies\\",
            "classmap_prefix": "/src/Classes/",
            "constant_prefix": "MZMBO_",
            "packages": [
                "gamajo/template-loader",
                "ericmann/sessionz",
                "ericmann/wp-session-manager"
            ],
            "delete_vendor_files": true
        },
        "installer-paths": {
          "vendor/ericmann/{$name}/": ["type:wordpress-plugin"]
        }
    },
  "require-dev": {
    "brianhenryie/strauss": "^0.8.3",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
    "squizlabs/php_codesniffer": "*",
    "wp-coding-standards/wpcs": "*",
    "yoast/phpunit-polyfills": "^1.0"
  }
}
