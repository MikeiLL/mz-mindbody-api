{
  "name": "mikeill/mz-mindbody-api",
  "description": "Interface with Mindbody Online API",
  "keywords": [
    "MBO",
    "mindbody",
    "jquery",
    "wordpress",
    "plugin"
  ],
  "homepage": "https://github.com/MikeiLL/mz-mindbody-api",
  "license": "GPL2",
  "authors": [
    {
      "name": "Mike iLL Kilmer",
      "email": "mike@mzoo.org",
      "homepage": "http://mzoo.org",
      "role": "Developer"
    }
   ],
   "type": "wordpress-plugin",
   "require": {
    "php": ">=7.1",
    "composer/installers": "~1.0",
    "gamajo/template-loader": "^1.3",
    "wp-coding-standards/wpcs": "*"
  },
   "autoload": {
     "psr-4": {
       "MZoo\\MzMindbody\\": "src"
     },
		"files": ["src/Classes/gamajo/template-loader/class-gamajo-template-loader.php"]
   },
   "config": {
     "optimize-autoloader": true,
     "preferred-install": "dist",
     "sort-packages": true
   },
   "scripts": {
     "lint": [
       "phpcs --extensions=php --standard=PSR12 src *.php --ignore=src/libraries/Gamajo-Template-Loader.php. "
     ],
     "fix": ["phpcbf --extensions=php --standard=PSR12 src *.php --ignore=src/libraries/Gamajo-Template-Loader.php . "]
   },
   "extra": {
    "mozart": {
        "dep_namespace": "MZoo\\MzMindbody\\Dependencies\\",
        "dep_directory": "/src/Dependencies/",
        "classmap_directory": "/src/Classes/",
        "classmap_prefix": "MZMBO_",
        "packages": [
            "gamajo/template-loader"
        ],
        "delete_vendor_directories": true
    }
},
  "require-dev": {
    "coenjacobs/mozart": "^0.7.1",
    "squizlabs/php_codesniffer": "*"
  }
}
